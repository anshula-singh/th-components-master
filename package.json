  "scripts": {
    "cli": "ts-node --script-mode scripts/cli.ts",
    "chromatic": "chromatic --app-code=ua2dlh2fc4 --storybook-build-dir .storybook-static",
    "heroku-postbuild": "yarn rollup && yarn storybook:build",
    "postinstall": "patch-package",
    "rollup": "rm -rf .dist && npm run theme && NODE_ENV=production rollup -c rollup.config.js",
    "rollup:watch": "rm -rf .dist && npm run theme && rollup -c rollup.config.js --watch",
    "serve": "node -r dotenv/config server/index.js",
    "storybook": "node scripts/storybook.js",
    "storybook:build": "build-storybook -o .storybook-static -s .dist",
    "test": "NODE_ENV=test CROSS_ORIGIN_ASSETS=false jest",
    "theme": "yarn run cli -- theme"
  },
